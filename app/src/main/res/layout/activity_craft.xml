<!--        android:textStyle="normal"-->
<!--        />-->

    <LinearLayout
        android:id="@+id/layout_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:layout_below="@+id/craft_input_description"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_marginRight="40dp"
            android:layout_height="50dp"
            android:padding="1dp"
            android:gravity="center"
            android:orientation="vertical">
            <EditText
                android:id="@+id/craft_input_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_design_black"
                android:padding="10dp"
                android:hint="Input ID"
                android:inputType="text"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="18sp"
                android:textStyle="normal"
                />
        </LinearLayout>>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="1dp"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/craft_search_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/search1"
                android:width="50dp"
                android:height="50dp"
                />
        </LinearLayout>>
    </LinearLayout>>

    <LinearLayout
        android:id="@+id/layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:layout_below="@+id/layout_three"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <LinearLayout
                android:id="@+id/craft_add_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/add1"
                android:layout_marginLeft="20dp"
            android:layout_marginRight="60dp"
                android:orientation="vertical"/>
        <LinearLayout
                android:id="@+id/craft_edit_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="1dp"
                android:gravity="center"
                android:background="@drawable/edit1"
                android:orientation="vertical"/>
        <LinearLayout
                android:id="@+id/craft_delete_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/delete1"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"/>
    </LinearLayout>

    <Button
        android:id="@+id/craft_view_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_one"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/input_design2"
        android:padding="10dp"
        android:text="View"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />

</RelativeLayout>