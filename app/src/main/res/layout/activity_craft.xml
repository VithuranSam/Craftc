<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Crafts.CraftActivity">

    <ImageView
        android:id="@+id/add_text"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:src="@drawable/addcrf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/craft_input_crname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design_black"
        android:layout_below="@+id/add_text"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="0dp"
        android:hint="Craft Name"
        android:inputType="text"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="normal"
        />

    <EditText
        android:id="@+id/craft_input_actual_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design_black"
        android:layout_below="@+id/craft_input_crname"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:hint="Actual Price"
        android:inputType="number"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="normal"
        />

    <EditText
        android:id="@+id/craft_input_selling_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design_black"
        android:layout_below="@+id/craft_input_actual_price"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:hint="Selling Price"
        android:inputType="number"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="normal"
        />

    <LinearLayout
        android:id="@+id/layout_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:layout_below="@+id/craft_input_selling_price"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_marginRight="40dp"
            android:layout_height="50dp"
            android:padding="1dp"
            android:gravity="center"
            android:orientation="vertical">
            <EditText
                android:id="@+id/craft_input_profit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_design_black"
                android:layout_below="@+id/maker_input_unit_price"
                android:padding="10dp"
                android:hint="Profit/Lost"
                android:inputType="number"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="18sp"
                android:textStyle="normal"
                android:orientation="vertical"
                />
        </LinearLayout>>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="1dp"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/craft_cal_profit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/cal1"
                android:width="50dp"
                android:height="50dp"
                />
        </LinearLayout>>
    </LinearLayout>>

    <EditText
        android:id="@+id/craft_input_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design_black"
        android:layout_below="@+id/layout_two"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:hint="Stock"
        android:inputType="text"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="normal"
        />

    <EditText
        android:id="@+id/craft_input_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design_black"
        android:layout_below="@+id/craft_input_stock"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:hint="Category"
        android:inputType="text"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="normal"
        />
    <EditText
        android:id="@+id/craft_input_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design_black"
        android:layout_below="@+id/craft_input_category"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:hint="Description (optional)"
        android:inputType="text"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="normal"
        />

