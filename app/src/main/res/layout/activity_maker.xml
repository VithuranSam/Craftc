<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Makers.MakerActivity">

    <ImageView
        android:id="@+id/add_text"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:src="@drawable/addcrf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        />
    <EditText
        android:id="@+id/maker_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design_brown"
        android:layout_below="@+id/add_text"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="30dp"
        android:hint="Maker's Name / Company Name"
        android:inputType="text"
        android:textColor="#A0522D"
        android:textColorHint="#A0522D"
        android:textSize="18sp"
        android:textStyle="normal"
        />

    <EditText
        android:id="@+id/maker_input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design_brown"
        android:layout_below="@+id/maker_input_name"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:hint="Email Address"
        android:inputType="text"
        android:textColor="#A0522D"
        android:textColorHint="#A0522D"
        android:textSize="18sp"
        android:textStyle="normal"
        />



    <EditText
        android:id="@+id/maker_input_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design_brown"
        android:layout_below="@+id/maker_input_email"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:hint="Phone Number"
        android:inputType="text"
        android:textColor="#A0522D"
        android:textColorHint="#A0522D"
        android:textSize="18sp"
        android:textStyle="normal"
        />

    <EditText
        android:id="@+id/maker_input_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design_brown"
        android:layout_below="@+id/maker_input_phone"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:hint="Craft Quantity"
        android:inputType="text"
        android:textColor="#A0522D"
        android:textColorHint="#A0522D"
        android:textSize="18sp"
        android:textStyle="normal"
        />
    <EditText
        android:id="@+id/maker_input_unit_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design_brown"
        android:layout_below="@+id/maker_input_quantity"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:hint="Unit Price"
        android:inputType="text"
        android:textColor="#A0522D"
        android:textColorHint="#A0522D"
        android:textSize="18sp"
        android:textStyle="normal"
        />

    <EditText
        android:id="@+id/maker_input_buying_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design_brown"
        android:layout_below="@+id/maker_input_unit_price"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:hint="Buying Price"
        android:inputType="text"
        android:textColor="#A0522D"
        android:textColorHint="#A0522D"
        android:textSize="18sp"
        android:textStyle="normal"
        />

    <EditText
        android:id="@+id/maker_input_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design_brown"
        android:layout_below="@+id/maker_input_buying_price"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:hint="Input ID and Edit/Delete"
        android:inputType="text"
        android:textColor="#A0522D"
        android:textColorHint="#A0522D"
        android:textSize="18sp"
        android:textStyle="normal"
        />


    <LinearLayout
        android:id="@+id/layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:layout_below="@+id/maker_input_id"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/maker_add_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/add1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="60dp"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/maker_edit_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="1dp"
            android:gravity="center"
            android:background="@drawable/edit1"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/maker_delete_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/delete1"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"/>
    </LinearLayout>

    <Button
        android:id="@+id/maker_view_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_one"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/input_design2"
        android:padding="10dp"
        android:text="View"
        android:textAllCaps="false"
        android:textColor="#A0522D"
        android:textSize="18sp" />
</RelativeLayout>