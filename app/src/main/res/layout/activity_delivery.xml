<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Delivery.DeliveryActivity">

    <ImageView
        android:id="@+id/add_text"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:src="@drawable/adddel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        />
    <EditText
        android:id="@+id/delivery_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@+id/add_text"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="30dp"
        android:hint="Craft Name"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="normal"
        />

    <EditText
        android:id="@+id/delivery_input_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@+id/delivery_input_name"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:hint="Amount of Delivery"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="normal"
        />



    <EditText
        android:id="@+id/delivery_input_cname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@+id/delivery_input_amount"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:hint="Customer Name"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="normal"
        />

    <EditText
        android:id="@+id/delivery_input_caddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@+id/delivery_input_cname"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:hint="Customer Address"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="normal"
        />
    <EditText
        android:id="@+id/delivery_input_cphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@+id/delivery_input_caddress"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:hint="Customer Phone No"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="normal"
        />

    <EditText
        android:id="@+id/delivery_input_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@+id/delivery_input_cphone"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:hint="Input ID"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="normal"
        />

    <LinearLayout
        android:id="@+id/layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:layout_below="@+id/delivery_input_id"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/delivery_add_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/add"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="60dp"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/delivery_edit_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="1dp"
            android:gravity="center"
            android:background="@drawable/edit"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/delivery_delete_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/delete"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"/>
    </LinearLayout>

    <Button
        android:id="@+id/delivery_view_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_one"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/input_design2"
        android:padding="10dp"
        android:text="View"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />
</RelativeLayout>